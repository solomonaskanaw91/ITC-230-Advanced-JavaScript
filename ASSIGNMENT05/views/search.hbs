<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>

<h3>Find Type of Coffee:</h3>
<form method="POST" action="">
    <input type="text" name="kw" placeholder="keyword" value="" required maxlength="100">
    <input type="text" name="loc" placeholder="location" value="us" required maxlength="100">
    <button id="search">Search</button>
</form>
<div id="type"></div>

<script>
    $(document).ready(function(){
        $('#search').click( function(){
            event.preventDefault();
            $.get("/api/books"+$('input:text[name=kw]').val()+"/" + $('input:text[name=loc]').val(), function(data, status){
                if (status == 'success') {
                    $("#type").html("");
                    data.jobs.forEach(function(job){
                        $("#type").append("<li><b>" +job.title+ "</b> - " + job.salary);
                    });
                }
            });
        });
    });
    
</script>
</body>